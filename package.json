{
  "name": "podex",
  "version": "0.1.0",
  "private": true,
  "description": "Podex - Web-based agentic IDE platform",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      },
      "allowAny": [
        "monaco-editor"
      ]
    },
    "onlyBuiltDependencies": [
      "@sentry/cli"
    ],
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "monaco-editor": "npm:@codingame/monaco-vscode-editor-api@^25.0.0"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.0",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
