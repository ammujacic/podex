# ===========================================
# GCP Configuration
# ===========================================
GCP_PROJECT_ID=podex-dev
GCP_REGION=us-east1

# For local dev with GCP APIs (Vertex AI)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# ===========================================
# Database (Cloud SQL / Local PostgreSQL)
# ===========================================
DATABASE_URL=postgresql+asyncpg://dev:devpass@localhost:5432/podex

# ===========================================
# Cache (Redis)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# Storage (Cloud Storage / Fake GCS)
# ===========================================
GCS_BUCKET=podex-workspaces-dev
# For local dev:
STORAGE_EMULATOR_HOST=http://localhost:4443

# ===========================================
# LLM Provider API Keys
# ===========================================
OPENROUTER_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5-coder:14b

# ===========================================
# Email (Console logging for dev)
# ===========================================
# Backends: console (dev), smtp, resend (production)
EMAIL_BACKEND=console
# EMAIL_FROM_ADDRESS=noreply@yourdomain.com
# EMAIL_FROM_NAME=Your App Name

# Resend (recommended for production)
# Get your API key from https://resend.com
RESEND_API_KEY=

# ===========================================
# CORS Settings
# ===========================================
CORS_ORIGINS='["http://localhost:3000","http://localhost:3010"]'

# ===========================================
# Authentication
# ===========================================
JWT_SECRET_KEY=dev-secret-key-for-local-development-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BROWSER_ACCESS_TOKEN_EXPIRE_MINUTES=120
BROWSER_REFRESH_TOKEN_EXPIRE_DAYS=30
COOKIE_SECURE=true
COOKIE_DOMAIN=
COOKIE_SAMESITE=lax

# OAuth Providers (optional - leave empty to disable)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# Admin User (for seeding)
# ===========================================
ADMIN_EMAIL=admin@podex.dev
ADMIN_PASSWORD=LocalDev_Change_In_Prod_123!

# ===========================================
# Internal Service Communication
# ===========================================
INTERNAL_API_KEY=dev-internal-key
INTERNAL_SERVICE_TOKEN=dev-internal-service-token

# ===========================================
# Billing (Stripe)
# ===========================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# ===========================================
# Push Notifications (Web Push VAPID keys)
# ===========================================
# SECURITY: Generate unique keys with: npx web-push generate-vapid-keys
# Never use default/example keys in production
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=

# ===========================================
# Optional: Redis Encryption
# ===========================================
REDIS_ENCRYPTION_KEY=

# ===========================================
# Monitoring (Sentry)
# ===========================================
# Per-service DSNs (recommended for filtering in Sentry dashboard)
SENTRY_DSN_API=
SENTRY_DSN_AGENT=
SENTRY_DSN_COMPUTE=
# Legacy: Single DSN used as fallback if per-service not set
SENTRY_DSN=

SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# Frontend Sentry
NEXT_PUBLIC_SENTRY_DSN=

# Desktop Sentry
SENTRY_DSN_DESKTOP=

# Sentry build-time (for source maps upload)
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# ===========================================
# Local Development Overrides
# ===========================================

# Ollama (for local LLM testing)
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5-coder:14b

# Fallback API keys (for testing other providers)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
